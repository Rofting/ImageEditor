            <ProgressBar fx:id="progressBar" prefHeight="18.0" prefWidth="607.0" />
            <ChoiceBox fx:id="filterChoiceBox">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="Escala de Grises" />
